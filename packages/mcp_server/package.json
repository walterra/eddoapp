{
  "name": "@eddo/mcp-server",
  "version": "0.4.0",
  "private": true,
  "type": "module",
  "main": "dist/mcp-server.js",
  "dependencies": {
    "@eddo/core-instrumentation": "workspace:*",
    "@eddo/core-server": "workspace:*",
    "@eddo/core-shared": "workspace:*",
    "@elastic/opentelemetry-node": "^1.7.0",
    "@opentelemetry/api": "^1.9.0",
    "dotenv-mono": "^1.5.1",
    "fastmcp": "^3.25.4",
    "nano": "^11.0.3",
    "pino": "^10.1.0",
    "undici": "^7.16.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@types/node": "^24.7.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "tsc",
    "dev": "OTEL_SERVICE_NAME=eddo-mcp-server OTEL_RESOURCE_ATTRIBUTES=deployment.environment=development node --import @elastic/opentelemetry-node --import tsx src/mcp-server.ts",
    "dev:watch": "tsx watch src/mcp-server.ts",
    "dev:no-otel": "OTEL_SDK_DISABLED=true tsx watch src/mcp-server.ts",
    "start": "OTEL_SERVICE_NAME=eddo-mcp-server OTEL_RESOURCE_ATTRIBUTES=deployment.environment=production node --import @elastic/opentelemetry-node dist/mcp-server.js",
    "start:test": "tsx src/mcp-server.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "test:integration:ui": "vitest --config vitest.integration.config.ts --ui"
  }
}
