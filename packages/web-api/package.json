{
  "name": "@eddo/web-api",
  "version": "0.6.0",
  "private": true,
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./rss": "./src/rss/index.ts",
    "./email": "./src/email/index.ts"
  },
  "scripts": {
    "dev": "OTEL_SERVICE_NAME=eddo-web-api OTEL_RESOURCE_ATTRIBUTES=deployment.environment=development NODE_ENV=development node --import @elastic/opentelemetry-node --import tsx src/index.ts",
    "dev:watch": "NODE_ENV=development tsx watch src/index.ts",
    "dev:no-otel": "OTEL_SDK_DISABLED=true NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc",
    "start": "OTEL_SERVICE_NAME=eddo-web-api OTEL_RESOURCE_ATTRIBUTES=deployment.environment=production node --import @elastic/opentelemetry-node dist/index.js"
  },
  "dependencies": {
    "@eddo/core-instrumentation": "workspace:*",
    "@eddo/core-server": "workspace:*",
    "@eddo/core-shared": "workspace:*",
    "@elastic/opentelemetry-node": "^1.7.0",
    "@hono/node-server": "^1.19.7",
    "@octokit/rest": "^22.0.1",
    "bcryptjs": "^3.0.3",
    "dockerode": "^4.0.9",
    "feedsmith": "^2.8.0",
    "google-auth-library": "^10.5.0",
    "hono": "^4.11.3",
    "imapflow": "^1.2.4",
    "jsonwebtoken": "^9.0.3",
    "nano": "^11.0.3",
    "pino": "^10.1.0",
    "undici": "^7.16.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@elastic/elasticsearch": "^9.2.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/dockerode": "^4.0.0",
    "@types/html-to-text": "^9.0.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^25.0.3",
    "@types/turndown": "^5.0.6",
    "dotenv": "^17.2.2",
    "html-to-text": "^9.0.5",
    "tsx": "^4.20.6",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4"
  }
}
