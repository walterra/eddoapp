{
  "name": "@eddo/core-instrumentation",
  "version": "0.3.0",
  "description": "OpenTelemetry instrumentation utilities for Eddo",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./otel-init": {
      "types": "./dist/otel-init.d.ts",
      "import": "./dist/otel-init.js",
      "default": "./dist/otel-init.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@elastic/opentelemetry-node": "^1.7.0",
    "@opentelemetry/api": "^1.9.0",
    "pino": "^10.1.0",
    "pino-opentelemetry-transport": "^2.0.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@opentelemetry/api": "^1.9.0"
  }
}
