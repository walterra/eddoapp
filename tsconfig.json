{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": [],
  "references": [
    { "path": "./packages/core-shared" },
    { "path": "./packages/core-client" },
    { "path": "./packages/core-instrumentation" },
    { "path": "./packages/core-server" },
    { "path": "./packages/mcp_server" },
    { "path": "./packages/printer_service" },
    { "path": "./packages/telegram_bot" },
    { "path": "./packages/web-api" },
    { "path": "./packages/web-client" }
  ],
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc",
    "files": true,
    "compilerOptions": {
      "module": "esnext",
      "isolatedModules": false
    }
  }
}
