# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
# Whether to log PII (username, first name, last name) in auth failures (true/false)
TELEGRAM_LOG_USER_DETAILS=false

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:3001/mcp

# CouchDB Configuration
COUCHDB_URL=http://admin:password@localhost:5984
COUCHDB_DB_NAME=todos-dev

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info

# Claude Code SDK Configuration (if different from Anthropic SDK)
CLAUDE_CODE_WORKING_DIR=./bot_workspace
CLAUDE_CODE_SESSION_TIMEOUT=3600

# Bot Persona Configuration
# Available personas: butler, gtd_coach, zen_master
BOT_PERSONA_ID=butler

# LLM Configuration
# Anthropic Claude models: claude-3-5-sonnet-20241022, claude-3-opus-20240229, etc.
LLM_MODEL=claude-3-5-sonnet-20241022

# Printer Service Configuration
PRINTER_ENABLED=false
PRINTER_IP_ADDRESS=192.168.1.100
PRINTER_PORT=9100
PRINTER_SCHEDULE_TIME=07:00

# ============================================
# OpenTelemetry Configuration (Server-side)
# ============================================

# Disable OpenTelemetry (set to 'true' to disable tracing/metrics export)
# When disabled, logs still go to console and file, but not to OTLP endpoint
# OTEL_SDK_DISABLED=true

# Service name (set automatically per-service, but can be overridden)
# OTEL_SERVICE_NAME=eddo-telegram-bot

# Resource attributes for filtering in APM UI
# OTEL_RESOURCE_ATTRIBUTES=service.version=0.3.0,deployment.environment=development

# OTLP endpoint (collector running locally via Docker)
# Default: http://localhost:4318
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# API key for OTLP endpoint (optional, injected by telemetry proxy for browser RUM)
# OTEL_API_KEY=your_api_key_here

# ============================================
# OpenTelemetry Configuration (Client-side/Browser RUM)
# ============================================
# These VITE_ prefixed vars are exposed to the browser at build time

# Enable/disable browser telemetry (default: true)
# VITE_OTEL_ENABLED=true

# Service name for browser traces (default: eddo-web-client)
# VITE_OTEL_SERVICE_NAME=eddo-web-client

# Service version (default: 0.3.0)
# VITE_OTEL_SERVICE_VERSION=0.3.0

# Environment name (default: development in dev, production in prod)
# VITE_OTEL_ENVIRONMENT=development

# Traces endpoint (default: /api/telemetry/v1/traces - proxied through web-api)
# VITE_OTEL_TRACES_ENDPOINT=/api/telemetry/v1/traces

# Log level for OTEL diagnostics (error, warn, info, debug, verbose)
# VITE_OTEL_LOG_LEVEL=warn

# ============================================
# EDOT Collector Configuration (for docker-compose.otel.yml)
# ============================================

# Elasticsearch API key for collector authentication
# Generate via: Kibana -> Stack Management -> API Keys -> Create API key
# ELASTIC_API_KEY=your_api_key_here

# Elasticsearch endpoint for collector (use Docker networking)
# Examples:
#   - https://host.docker.internal:9200  (ES running on host machine)
#   - https://your-cloud-es.com:443      (Elastic Cloud)
# COLLECTOR_ES_NODE=https://host.docker.internal:9200

# TLS Configuration (for self-signed certificates)
# OTEL_TLS_VERIFY=false
# OTEL_CA_FILE=/path/to/ca.pem

# CouchDB credentials for metrics scraping (collector uses these to access /_node/_local/_prometheus)
# COUCHDB_USERNAME=admin
# COUCHDB_PASSWORD=password
