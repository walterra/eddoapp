# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
# Whether to log PII (username, first name, last name) in auth failures (true/false)
TELEGRAM_LOG_USER_DETAILS=false

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:3001/mcp

# CouchDB Configuration
COUCHDB_URL=http://admin:password@localhost:5984
COUCHDB_DB_NAME=todos-dev

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info

# Claude Code SDK Configuration (if different from Anthropic SDK)
CLAUDE_CODE_WORKING_DIR=./bot_workspace
CLAUDE_CODE_SESSION_TIMEOUT=3600

# Bot Persona Configuration
# Available personas: butler, gtd_coach, zen_master
BOT_PERSONA_ID=butler

# LLM Configuration
# Anthropic Claude models: claude-3-5-sonnet-20241022, claude-3-opus-20240229, etc.
LLM_MODEL=claude-3-5-sonnet-20241022

# Printer Service Configuration
PRINTER_ENABLED=false
PRINTER_IP_ADDRESS=192.168.1.100
PRINTER_PORT=9100
PRINTER_SCHEDULE_TIME=07:00
