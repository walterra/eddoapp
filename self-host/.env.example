# Eddo self-host environment
# Copy to .env and update values

# Release tag for Docker images (vX.Y.Z) or "latest"
EDDO_VERSION=latest

# Application
NODE_ENV=production
LOG_LEVEL=info
PORT=3000
CORS_ORIGIN=http://localhost:3000
JWT_SECRET=change-this-to-a-strong-32-char-secret

# CouchDB
COUCHDB_ADMIN_USERNAME=admin
COUCHDB_ADMIN_PASSWORD=password
COUCHDB_DB_NAME=todos-prod
COUCHDB_URL=http://admin:password@eddo-couchdb:5984

# Elasticsearch
ELASTICSEARCH_URL=http://eddo-elasticsearch:9200

# MCP Server
MCP_SERVER_URL=http://eddo-mcp-server:3001/mcp
MCP_SERVER_PORT=3001
MCP_HOST=0.0.0.0

# Telegram Bot + LLM
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
ANTHROPIC_API_KEY=your-anthropic-api-key
BOT_PERSONA_ID=butler
LLM_MODEL=claude-sonnet-4-0

# Optional: Google OAuth for email sync
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI=http://localhost:3000/api/email/oauth/callback

# Optional: OTEL collector
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# OTEL_API_KEY=
